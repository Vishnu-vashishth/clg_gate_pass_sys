{
    "version": 2,
    "builds": [
      {
        "src": "myproject/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "3.9",
          "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --no-input",
          "outputDirectory": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/staticfiles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/myproject/wsgi.py"
      }
    ]
  }
  